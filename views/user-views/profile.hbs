<div class="movies-head">
  <h3>
    My Created Meals:
  </h3>
<form action="/create-random-meal" method="POST">
<button class="btn btn-primary">Make a Meal</button></form>
</div>


<div class="row mx-auto text-center">
  {{#each meals}}
  <div class="col-lg-3 artist mx-auto d-block text-center" style="margin-bottom: 10px">
    <div class="card">
    <a href="/meals/details/{{ this._id }}">
      <img
        class="card-img-top mx-auto d-block"
        src="{{ this.image }}"
        onerror="if (this.src != '/images/dubious.png') this.src = '/images/dubious.png';"
      />
    </a>

    
      <div class="card-title text-center">
        <a href="/meals/details/{{ this._id }}">
          <h5 class="btn-link">
            <em>{{ this.name }}</em>
          </h5>
          </a>
      </div>
      {{!-- <div class="card-body text-left">
        <p class="card-text">{{this.body}}</p>
      </div> --}}
  <ul class="list-group list-group-flush text-left">
    <li class="list-group-item" style="color: black" >First: {{this.first.name}}</li>
    <li class="list-group-item" style="color: black" >Second: {{this.second.name}}</li>
  </ul>
    </div>
    <div class="form-inline justify-content-center ed-buttons">
      <a href="/meals/edit/{{ this._id }}" class="btn btn-secondary btn-sm"
        >Edit Meal</a
      >
      <form action="/meals/delete/{{ this._id }}" method="POST">
        <button class="btn btn-danger btn-sm">Delete Meal</button>
      </form>
    </div>

  </div>

  {{/each}}
</div>
